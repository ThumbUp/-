<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비용 계산"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/meetingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#949494" />

            <TextView
                android:id="@+id/meetingDate2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="날짜를 선택하세요"
                android:layout_marginLeft="35dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/calendarBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuBox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/box_round_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/addBtn1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/menu_plus"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/placeMenu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장소"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494" />

                <EditText
                    android:id="@+id/placeInput1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:theme="@style/InputTheme"/>

                <TextView
                    android:id="@+id/placeMenuPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494"
                    android:layout_marginLeft="18dp"/>

                <EditText
                    android:id="@+id/placeMenuPriceInput1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_toRightOf="@id/placeMenuPrice"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="0"
                    android:theme="@style/InputTheme"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/box_round_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/addBtn2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/menu_plus"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/placeMenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장소"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494" />

                <EditText
                    android:id="@+id/placeInput2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:theme="@style/InputTheme"/>

                <TextView
                    android:id="@+id/placeMenuPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494"
                    android:layout_marginLeft="18dp"/>

                <EditText
                    android:id="@+id/placeMenuPriceInput2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_toRightOf="@id/placeMenuPrice"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="0"
                    android:theme="@style/InputTheme"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/box_round_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/addBtn3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/menu_plus"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/placeMenu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장소"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494" />

                <EditText
                    android:id="@+id/placeInput3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:theme="@style/InputTheme"/>

                <TextView
                    android:id="@+id/placeMenuPrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494"
                    android:layout_marginLeft="18dp"/>

                <EditText
                    android:id="@+id/placeMenuPriceInput3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_toRightOf="@id/placeMenuPrice"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="0"
                    android:theme="@style/InputTheme"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/box_round_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/addBtn4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/menu_plus"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/placeMenu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장소"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494" />

                <EditText
                    android:id="@+id/placeInput4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:theme="@style/InputTheme"/>

                <TextView
                    android:id="@+id/placeMenuPrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494"
                    android:layout_marginLeft="18dp"/>

                <EditText
                    android:id="@+id/placeMenuPriceInput4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_toRightOf="@id/placeMenuPrice"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="0"
                    android:theme="@style/InputTheme"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuBox5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/box_round_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/addBtn5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/placeMenu5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장소"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494" />

                <EditText
                    android:id="@+id/placeInput5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:theme="@style/InputTheme"/>

                <TextView
                    android:id="@+id/placeMenuPrice5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#949494"
                    android:layout_marginLeft="18dp"/>

                <EditText
                    android:id="@+id/placeMenuPriceInput5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_toRightOf="@id/placeMenuPrice"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="0"
                    android:theme="@style/InputTheme"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/meetingMemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#949494"/>

            <EditText
                android:id="@+id/meetingMemoInput"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/meetingMemo"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:background="@drawable/et_border"
                android:theme="@style/InputTheme"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/meetingPriceSum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toLeftOf="@id/won"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_alignBaseline="@id/meetingPriceSum"/>
            <TextView
                android:id="@+id/won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:layout_toLeftOf="@id/meetingPriceSum"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_alignBaseline="@id/meetingPriceSum"/>

            <Button
                android:id="@+id/meetingPriceSum"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="계산하기"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_round_gray"
                android:textSize="14dp"
                android:textColor="#949494" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>