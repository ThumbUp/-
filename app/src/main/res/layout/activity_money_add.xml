<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/chevron_big_left"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내역추가"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="45dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/meetingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임"
                android:textSize="20dp"
                android:textColor="#6D6D6D" />

            <TextView
                android:id="@+id/meetingName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스모프"
                android:layout_toRightOf="@id/meetingName"
                android:layout_marginLeft="35dp"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/meetingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인원"
                android:textSize="20dp"
                android:textColor="#6D6D6D"/>

            <EditText
                android:id="@+id/meetingNumber2"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:ems="10"
                android:inputType="number"
                android:layout_toRightOf="@id/meetingNumber"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#6D6D6D"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/meetingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="20dp"
            android:textColor="#6D6D6D"/>

        <TextView
            android:id="@+id/meetingDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜를 선택하세요"
            android:layout_toRightOf="@id/meetingDate"
            android:layout_marginLeft="35dp"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/dateBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/calendar"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"/>

    </RelativeLayout>

</LinearLayout>