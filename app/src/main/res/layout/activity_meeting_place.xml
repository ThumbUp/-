<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/top">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_chevron_left_24"
            android:layout_alignParentLeft="true"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스모프"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="10dp"
        android:id="@+id/meet">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/meet_name">

            <TextView
                android:id="@+id/meet_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="# " />

            <TextView
                android:id="@+id/meet_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="정기 모임"
                android:layout_toRightOf="@id/meet_name1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/meet_personnel">

            <TextView
                android:id="@+id/meet_personnel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참여 : "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/meet_personnel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="5"
                android:layout_toRightOf="@id/meet_personnel1"/>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:layout_marginVertical="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/voteplace">

    <TextView
        android:id="@+id/place_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 위치 투표"
        android:textStyle="bold"
        android:textColor="#303F80"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp" />

        <TextView
            android:id="@+id/vote_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="투표하기"
            android:textColor="#000000"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"/>

        <LinearLayout
            android:id="@+id/place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/Rectangle"
            android:layout_below="@id/vote_place"
            android:layout_marginTop="18dp"
            android:paddingLeft="20dp">

            <RadioGroup
                android:id="@+id/place_Group"
                android:layout_gravity="left"
                android:layout_width="295dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="성신여대입구" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="충정로" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="혜화" />
            </RadioGroup>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_plus"
                android:layout_gravity="top|right"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/chkplace">

    <TextView
        android:id="@+id/check_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 확인"
        android:textStyle="bold"
        android:textColor="#303F80"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@id/check_place"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_corner_glay"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ListView
                android:id="@+id/place_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"></ListView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>